{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Les videos de la catégorie {{ cat[0].category.name }}</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>URL</th>
                    <th>Date de création</th>
                    <th>Auteur</th>
                </tr>
            </thead>
            <tbody>
                {% for i in cat %}

                    <tr>
                        <td><a href="{{ path('detailVideo',{'id':i.id}) }}">{{ i.title }}</a></td>
                        <td>{{ i.description }}</td>
                        <td><a href="{{ i.url }}">{{ i.url }}</a></td>
                        <td>{{ i.dateCreation.date }}</td>
                        <td>{{ i.user.firstname }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}